                <option value="April">April</option>
                <option value="May">May</option>
                <option value="June">June</option>
                <option value="July">July</option>
                <option value="August">August</option>
                <option value="September">September</option>
                <option value="October">October</option>
                <option value="November">November</option>
                <option value="December">December</option>
            </select>
        </div>
        <div class="form-row">
            <label for="fld_yearOfBirth" class="select">
                Year of birth
            </label>
            <select name="fld_yearOfBirth" id="fld_yearOfBirth">
                <option selected="selected" value="Year">Year</option>
                <option value="1980">1980</option>
                <option value="1981">1981</option>
                <option value="1982">1982</option>
                <option value="1983">1983</option>
            </select>
        </div>
    </fieldset>
    <fieldset class="radio-checks">
        <legend>Gender</legend>
        <div class="form-row">
            <label for="fld_marketResearch">
                Male</label>
            <input type="radio" name="fld_marketResearch" id="fld_marketResearch" />
        </div>
        <div class="form-row">
            <label for="fld_marketResearch">
                Female</label>
            <input type="radio" name="fld_marketResearch" id="fld_marketResearch" />
        </div>
    </fieldset>
    <div class="form-row">
        <label for="fld_postcode" class="with-button postcode" style="margin-bottom: 20px;">
