<div class="row">
    <div class="gr-12">
        <div class="table-wrapper points-callout points-callout-tertiary ddl-icon-before ddl-icon-vouchers">
            <table>
                <thead class="ddl-visually-hidden">
                    <tr>
                        <th class="ddl-text-left">
                            Type of vouchers
                        </th>
                        <th class="ddl-text-centre">
                            Voucher value
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td id="lblVoucherSpent"><h2>
                            @Html.Translate("Shared/_Vouchers", "lclVoucherSpent")</h2>
                        </td>
                        <td class="ddl-no-wrap">
                            @if (isDecimalDisabled)
                            {
                                xVal = GeneralUtility.GetDecimalTrimmedCurrencyVal(Model.TotalRewardUsed.TryParse<string>()).TryParse<decimal>();

                            }
                            else
                            {
                                xVal = Model.TotalRewardUsed;
                            }
                            <div id="lblTotalRewardUsed" class="l-column">
                                <span id="lblCurrSymbols">@Html.Translate("Shared/_Vouchers", "CurrencySymbol") @xVal
                                    @Html.Translate("Shared/_Vouchers", "CurrencyAlphaSymbol")</span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
