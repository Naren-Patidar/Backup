    <dt id="lblVoucherSpent">@Html.Translate("Shared/_Vouchers", "lclVoucherSpent")</dt>
    <dd><span id="lblCurrSymbols">@Html.Translate("Shared/_Vouchers", "CurrencySymbol") @Model @Html.Translate("Shared/_Vouchers", "CurrencyAlphaSymbol")</span></dd>
