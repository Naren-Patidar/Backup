<log4net debug="false">
  <!--Appender info for writing to EventLog -->
  <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
    <param name="ApplicationName" value="MCA Test Framework" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5level | %logger --> %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="WARN" />
      <levelMax value="FATAL" /> 
    </filter>
  </appender>
  <!--Appender info for writing to Log File -->
  <appender name="FileLogAppender" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString" value="D:\MCA_TestFramework_Logs\%date{dd.MM.yyyy}.\\\\%property{LogName}.log"/>
		<appendToFile value="false"/>
		<layout type="log4net.Layout.PatternLayout">			
			<conversionPattern value="%d- %level- %message%newline- %exception%newline" />
		</layout>
		<filter type="log4net.Filter.LevelRangeFilter">
      <!--levelMin value="WARN" -->
      <levelMax value="FATAL" />
			<levelMin value="DEBUG" />
      <!--levelMax value="INFO" -->
    
		</filter>
	</appender>
  <!--Appender info for writing to Rolling Log File -->
  <!--<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="D:\MCA_TestFramework_Logs\LogFile.log"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="2" />
    <maximumFileSize value="2MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%d - %message%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="INFO" />
    </filter>
  </appender>-->
  <!--Setting Root Priority to DEBUG -->
  <root>
    <priority value="DEBUG" />
    <appender-ref ref="EventLogAppender" />
    <!--<appender-ref ref="RollingLogFileAppender" />-->
    <appender-ref ref="FileLogAppender" />
  </root>
</log4net>