<?xml version='1.0' encoding='Windows-1252'?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI Id="MySetupUI">
      <Dialog Id="ConnStringUI" Width="370" Height="270" Title="[ProductName] - Database Settings - [ProductName]" NoMinimize="yes">
        <!-- Connection String -->
        <Control Id="ConnectionStringLabel" Type="Text" X="25" Y="70" Width="200" Height="15" TabSkip="no" Text="&amp;Set the Reporting DB Server Connection String below:" />
        <Control Id="ConnectionStringEdit" Type="Edit" X="25" Y="90" Width="320" Height="18" Property="REPORTING_CONNECTION_STRING" Text="{200}" />


        <Control Id="ConnectionStringLabel2" Type="Text" X="25" Y="120" Width="200" Height="15" TabSkip="no" Text="&amp;Set the OLTP DB Connection String below:" />
        <Control Id="ConnectionStringEdit2" Type="Edit" X="25" Y="140" Width="320" Height="18" Property="OLTP_CONNECTION_STRING" Text="{200}" />


        <!-- Back button -->
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back">
          <Publish Event="NewDialog" Value="LicenseAgreementDlg">1</Publish>
        </Control>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Next">
          <Publish Event="NewDialog" Value="InstallDirDlg">
            <!--if settings are correct, allow next dialog-->
            <![CDATA[REPORTING_CONNECTION_STRING <> "" or OLTP_CONNECTION_STRING <> ""]]>
          </Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>Please enter database configuration</Text>
        </Control>
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}Database Settings</Text>
        </Control>
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
      </Dialog>

    </UI>
  </Fragment>
</Wix>
