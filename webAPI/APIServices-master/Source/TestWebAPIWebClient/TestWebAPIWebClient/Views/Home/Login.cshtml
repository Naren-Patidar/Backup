@using TestWebAPIWebClient.Models;
@model TescoUser

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Login</title>
	<!-- Bootstrap -->
	<link href="~/scripts/css/bootstrap.min.css" rel="stylesheet">
	<script src="~/Scripts/js/jquery-1.9.1.js"></script>
</head>
<body>
	<div class="container">
	@using (Html.BeginForm("Login", "Home", new{@returnUrl = ViewBag.ReturnUrl} ))
    {
	<div class="page-header">
		<h1>Welcome To My Tesco Login</h1>
	</div>

	<div class="panel panel-default" style="max-width:400px;margin-left:auto; margin-right:auto;">
		<div class="panel-heading text-center">
			<h1 class="panel-title">Enter Login Credentials</h1>
		</div>
		<div class="panel-body">
			<div class="col-sm-12">
				@Html.LabelFor(m => m.UserName, new {@class = "col-sm-4"})
				@Html.TextBoxFor(m => m.UserName, new {@class = "col-sm-8"})
			</div>

			<div class="col-sm-12">
				@Html.LabelFor(m => m.Password, new {@class = "col-sm-4"})
				@Html.PasswordFor(m => m.Password, new {@class = "col-sm-8"})
			</div>
			<div class="col-sm-4">
				<input type="submit" value="Login" class="btn btn-block btn-sm btn-primary" />
			</div>
		</div>
	</div>
	<div class="panel panel-default" style="max-width:400px;margin-left:auto; margin-right:auto;">
		<div class="panel-heading text-center">
			<h1 class="panel-title">Sign Up</h1>
		</div>
		<div class="panel-body">
			<p>Coming Soon!!</p>
		</div>
	</div>
	}
	</div>
</body>
</html>
